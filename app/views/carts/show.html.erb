<div class='container'>
  <table>
  <caption>Your Cart</caption>
  <thead>
    <tr>
      <th>Product</th>
      <th>Buyer</th>
      <th>Seller</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total price</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  <thead>

    <tbody>
      <% @user.products.each do |product| %>
      <tr>
          <td><%= link_to product.name, product_path(product) %></td>
          <td><%= @user.email %></td>
          <td><%= product.seller.email %></td>
          <td><%= product.price %></td>
          <td><%= product.cart_products[0].quantity %></td>
          <td><%= product.cart_products[0].quantity * product.price.to_f.round(2) %></td>
          <!-- <td><%= link_to 'Edit', edit_cart_product_path(product) %></td> -->
          <td><%= link_to 'Delete', cart_product_path(product), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
    <br>
    <tr></tr>
    <tr>
      <td><b>Subtotal: </b><%= number_to_currency(@cart.total_price) %></td>
    </tr>
  </table>
  <%= button_to 'Checkout', checkout_path %>
  <%= link_to 'Back', products_path %>

</div>
