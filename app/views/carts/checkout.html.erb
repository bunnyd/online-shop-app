<% if flash[:error] != nil %>
  <p><b>Error:</b> <%= flash[:error] %></p>
<% end %>

<% if @confirmed_purchases.length > 0 %>
<h1>Thanks for your order!</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Buyer</th>
      <th>Seller</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @confirmed_purchases.each do |purchase, quantity| %>
      <tr>
        <td><%= purchase.name %></td>
        <td><%= @user.email %></td>
        <td><%= purchase.seller.email %></td>
        <td><%= number_to_currency(purchase.price) %></td>
        <td><%= quantity %></td>
        <td><%= number_to_currency(purchase.total_price(@cart)) %></td>
      </trt>
    <% end %>
  </tbody>
</table>
<% end %>

<% if @confirmed_purchases.length > 0 %>
<h2>Total: <%=number_to_currency(@final_total_price)%>
</h2>
<% else %>
<h2>Total: $0.00 </h2>
<% end %>

<% if @rejected_purchases.length > 0 %>
<h3>Please note that the following items and quantites are no longer available for purchase from the sellers you selected:</h3>
  <% @rejected_purchases.each do |rejected| %>
  <li><%= rejected.name %> from <%= rejected.seller.username %></li>
  <% end %>
<% end %>

<%= link_to 'Cart', cart_path(@cart) %>
