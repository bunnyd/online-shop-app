<% if flash[:error] != nil %>
  <p><b>Error:</b> <%= flash[:error] %></p>
<% end %>

<h1>Thanks for your order!</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Buyer</th>
      <th>Seller</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= @user.email %></td>
        <td><%= product.seller.email %></td>
        <td><%= product.price %></td>
        <td><%= product.cart_products %></td>
        <td><%= product.total_price.round(2) %></td>
      </trt>
    <% end %>
  </tbody>
</table>
